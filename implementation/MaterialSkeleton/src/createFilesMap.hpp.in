#ifndef ENDFTK_IMPLEMENTATION_MATERIALSKELETON_SRC_CREATEFILESMAP_HPP
#define ENDFTK_IMPLEMENTATION_MATERIALSKELETON_SRC_CREATEFILESMAP_HPP

#include <unordered_map>
#include <functional>

#include "ENDFtk.hpp"

namespace ENDFtk {
namespace implementation {

template<typename Iterator>
std::unordered_map<int, FileSkeleton<Iterator>& > 
MaterialSkeleton<Iterator>::createFilesMap(
  std::vector<FileSkeleton<Iterator>>& indexed){

  std::unordered_map<int, FileSkeleton_t& > fileMap;

  fileMap.reserve(indexed.size());

  try{
    for( auto& file : indexed ){
      auto MF = file.MF();
      if( fileMap.find(MF) == fileMap.end() ){
        fileMap.insert({file.MF(), file});
      } else {
        LOG(ERROR) << "Found File with MF already used: " << MF;
        throw std::exception();
      }
    }
  } catch( std::exception& e ){
    LOG(INFO) << "Trouble constructing the files map of MaterialSkeleton.";
    throw e;
  }

  return fileMap;
}

} // namespace implementation
} // namespace ENDFtk
#endif  // ENDFTK_IMPLEMENTATION_MATERIALSKELETON_SRC_CREATEFILESMAP_HPP


