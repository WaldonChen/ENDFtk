#ifndef ENDFTK_IMPLEMENTATION_TAPESKELETON_TAPESKELETON_HPP
#define ENDFTK_IMPLEMENTATION_TAPESKELETON_TAPESKELETON_HPP

namespace ENDFtk {
namespace implementation {

template<typename Iterator>
TapeSkeleton<Iterator>::TapeSkeleton(Iterator& begin, const Iterator& end, 
                                           long& lineNumber )
  : begin_(begin)
{
  try{
    ENDFtk::implementation::TapeIdentification TPID(begin, end, lineNumber);

    HeadRecord head(begin, end, lineNumber);

    this->materials_.emplace_back(head, begin, begin, end, lineNumber);

    auto TEND = StructureDivision(begin, end, lineNumber); 

    while( TEND.tail.MAT() != -1 ){
      materials_.emplace_back(asHead(TEND), begin, begin, end, lineNumber);
      TEND = StructureDivision(begin, end, lineNumber); 
    }
  } catch( std::exception& e ){
    LOG(INFO) << "Trouble when creating a TapeSkeleton";
    LOG(INFO) << "Line number=" << lineNumber;
    throw e;
  }

  end_ = begin;
}

} // namespace implementation
} // namespace ENDFtk

#endif  // ENDFTK_IMPLEMENTATION_TAPESKELETON_TAPESKELETON_HPP


