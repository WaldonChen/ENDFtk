#ifndef ENDFTK_IMPLEMENTATION_SECTIONSKELETON_HPP
#define ENDFTK_IMPLEMENTATION_SECTIONSKELETON_HPP

/** @brief Skeleton of a Section containing a few pieces to know how to locate
 * it.
 */
template<typename Iterator>
class ENDFtk::implementation::SectionSkeleton {
  public:
    SectionSkeleton(const HeadRecord& head,
                    Iterator begin, Iterator& position, const Iterator& end,
                    long& lineNumber );

    int MT() const { return MT_; }
    Iterator begin() const { return begin_; }
    Iterator end() const { return end_; }

    int MT_;          //!< Section identifier

    Iterator begin_;  //!< The beginning of the SectionSkeleton
    Iterator end_;    //!< The end of the SectionSkeleton

};

#include "ENDFtk/implementation/SectionSkeleton/src/SectionSkeleton.hpp"

#endif  // ENDFTK_IMPLEMENTATION_SECTIONSKELETON_HPP

